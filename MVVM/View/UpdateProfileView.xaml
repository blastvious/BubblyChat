<Window x:Class="BubblyChat.MVVM.View.UpdateProfileView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BubblyChat.MVVM.View"
        xmlns:vm="clr-namespace:BubblyChat.MVVM.ViewModel"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Height="790" 
        Width="650"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize">
    <Window.DataContext>
        <vm:UpdateProfileVM/>
    </Window.DataContext>
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Border CornerRadius="30 30 0 0"
                Grid.RowSpan="3">
            <Border.Background>
                <ImageBrush ImageSource="/Images/BG.jpg"/>
            </Border.Background>

            <Border Grid.RowSpan="2"
                    CornerRadius="30 30 0 0"
                    BorderThickness="5"
                    Opacity="0.85">
                <!--<Border.BorderBrush>
                    <LinearGradientBrush StartPoint="0,0"
                                         EndPoint="1 1">
                        <GradientStop Color="#CBAAFF" Offset="0"/>
                        <GradientStop Color="#B98AF3" Offset="0.75"/>
                        <GradientStop Color="#8A16C1" Offset="1"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>-->

                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0"
                                         EndPoint="1 1">
                        <GradientStop Color="#FF7356A0" Offset="0"/>
                        <GradientStop Color="#B98AF3" Offset="0.5"/>
                        <GradientStop Color="#FF7356A0" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

            </Border>
            
            
        </Border>
        <Grid Grid.Row="1"
              Grid.RowSpan="2">
            <!-- Viền sóng -->
            <Path Fill="AliceBlue" 
              Grid.Row="1">
                <Path.Data>
                    <PathGeometry Figures="M5,50 
                                    C100,5 200,100 300,50 
                                    S500,5 645,50 
                                    L645,750 L5,750 Z"/>
                </Path.Data>
            </Path>
        </Grid>

        <StackPanel Grid.Row="1"
                    Orientation="Vertical">
            <StackPanel Margin="0 50 0 0">
                <Border Width="185"
                        Height="185"
                        CornerRadius="90"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        BorderBrush="#FF7624B1"
                        BorderThickness="3">
                    <Border.Background>
                        <ImageBrush ImageSource="/Images/user.png"/>
                    </Border.Background>
                    <Border CornerRadius="90"
                            Width="50"
                            Height="50"
                            Background="White"
                            BorderBrush="Black"
                            BorderThickness="3"
                            VerticalAlignment="Bottom"
                            HorizontalAlignment="Right">
                        <Button x:Name="btnChooseAvt"
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                Background="Transparent">
                            <Icon:PackIconMaterial Kind="Camera"
                                               Width="30"
                                               Height="30"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>
                        </Button>
                            
                    </Border>
                </Border>

            </StackPanel>
            <StackPanel Margin="0 30 0 0">
                <TextBlock Text="Your Display Name"
                           FontSize="30"
                           FontWeight="Bold"
                           Foreground="Black"
                           Margin="50 0 0 0"/>
                <Border CornerRadius="9"
                        BorderBrush="LightGray"
                        BorderThickness="3"
                        Width="550"
                        Height="40">
                        <TextBox x:Name="DisplayName"
                                 Text="Hello"
                                 FontWeight="Bold"
                                 Background="Transparent"
                                 BorderBrush="Transparent"
                                 FontSize="20"
                                 Foreground="Black"
                                 Margin="10 0 0 0"/>
                    </Border>

            </StackPanel>
            <StackPanel Margin="0 30 0 0">
                <Label Content="Birth"
                       FontSize="30"
                       FontWeight="Bold"
                       Foreground="Black"
                       Margin="50 0 0 0"/>
                <StackPanel Orientation="Horizontal">
   
                    <DatePicker Height="40"
                                Width="550"
                                FontSize="28"
                                Margin="50 0 0 0"
                                SelectedDate="{Binding Birthdate}"
                                Background="Transparent">
                        <DatePicker.BorderBrush>
                            <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                                <GradientStop Color="#FFA3AEB9"/>
                                <GradientStop Color="#FF8399A9" Offset="0.375"/>
                                <GradientStop Color="#FF718597" Offset="0.375"/>
                                <GradientStop Color="#FF5B87A7" Offset="1"/>
                            </LinearGradientBrush>
                        </DatePicker.BorderBrush>
                    </DatePicker>
                </StackPanel>


                <StackPanel Margin="0 30 0 0">
                    <TextBlock Text="Phone number"
                               FontSize="30"
                               FontWeight="Bold"
                               Foreground="Black"
                               Margin="50 0 0 0"/>
                    <Border CornerRadius="9"
                            Height="40"
                            Width="550"
                            BorderBrush="LightGray"
                            BorderThickness="3">
                        <TextBox x:Name="PhoneNumber"
                                 Text="Hello"
                                 FontWeight="Bold"
                                 Background="Transparent"
                                 BorderBrush="Transparent"
                                 FontSize="20"
                                 Foreground="Black"
                                 Margin="10 0 0 0"/>
                    </Border>

                </StackPanel>

            </StackPanel>

        </StackPanel>

        <Border Grid.Row="0"
                MouseDown="Border_MouseDown">
            <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right">
                <Button x:Name="btnClose"
                    Cursor="Hand"
                    Click="btnClose_Click">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFF54428" />
                                    
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="55" Height="35"
                                    CornerRadius="0 30 0 0"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>

                            </Border>
                        </ControlTemplate>
                    </Button.Template>



                    <Icon:PackIconMaterial Kind="WindowClose"
                                           Foreground="White" 
                                           Height="10" 
                                           Width="10"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"/>


                </Button>
            </StackPanel>
        </Border>

    </Grid>
</Window>
